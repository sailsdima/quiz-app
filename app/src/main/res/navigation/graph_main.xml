<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.dp.a360quiz.ui.main.MainFragment">
        <action
            android:id="@+id/toQuizFragment"
            app:destination="@id/quizFragment" />
        <action
            android:id="@+id/toHistoryFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.dp.a360quiz.ui.quiz.QuizFragment" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.dp.a360quiz.ui.history.HistoryFragment" />
</navigation>